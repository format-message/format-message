{
  "name": "format-message",
  "private": true,
  "scripts": {
    "benchmark": "npm run benchmark-compile && node scripts/benchmark.js",
    "benchmark-compile": "packages/format-message-cli/format-message transform -i scripts/benchmark.src.js > scripts/benchmark.js",
    "lerna": "lerna",
    "lint": "eslint .",
    "test": "npm run lint && npm run test-setup && npm run test-node && npm run test-browsers",
    "test-browsers": "karma start",
    "test-setup": "rm -rf test/inline && packages/format-message-cli/format-message transform -i test/format.spec.js > test/format-inline.spec.js",
    "test-node": "nyc --reporter=lcov --reporter=text mocha -cG --timeout 10000 -R dot 'test/**/*.spec.js'",
    "cldr": "node scripts/cldr.js"
  },
  "devDependencies": {
    "async": "^2.0.0",
    "babel-eslint": "^8.0.0",
    "benchmark": "^2.1.0",
    "chai": "^4.0.1",
    "cldr-core": "^32.0.0",
    "eslint": "^4.7.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^3.0.0",
    "inferno": "^3.3.1",
    "inferno-create-element": "^3.3.1",
    "intl": "^1.0.1",
    "intl-messageformat": "^2.1.0",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.6",
    "karma-webpack": "^2.0.5",
    "lerna": "^2.5.1",
    "messageformat": "^1.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.0.0",
    "nyc": "^11.0.2",
    "react": "^16.0.0",
    "rimraf": "^2.4.3",
    "webpack": "^3.8.1"
  },
  "version": "5.0.0",
  "workspaces": [
    "packages/*"
  ]
}
